@model ProyectoTanner.Models.ViewModel.RecoveryPassViewModel
@{
    ViewBag.Title = "Recovery";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    

}


<div class="container">
    <div class="col-xs-10 col-sm-6 col-xs-offset-1 col-sm-offset-3 marco-login wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
        <img src="~/images/logo-tanner-azul.png" class="img-responsive center-block espacio-25" />
        @*<div class="row">
            <div class="col-md-6 offset-3">
                <div class="form-style">*@
                    <form action="@Url.Content("~/Login/Recovery")" method="post">
                        <hr />
                        @Html.HiddenFor(d => d.Token)
                     
                        @Html.PasswordFor(d => d.Password,  new { @class = "form-control" , @placeholder = "Escribe tu nueva contraseña"})
                        @Html.ValidationMessageFor(d => d.Password, null, new { style = "color:red" })
                        <br />
                  
                        @Html.PasswordFor(d => d.Password2,  new { @class = "form-control", @placeholder = "Repite tu nueva contraseña" })
                        @Html.ValidationMessageFor(d => d.Password2, null, new { style = "color:red" })
                      
                        <div class="text-center">
                            <button class=" btn-submit btn-fullwidth">Recuperar</button>
                        </div>
                        <div  class="text-center">
                            @ViewBag.Message
                        </div>
                    </form>
                @*</div>
            </div>
        </div>*@
    </div>
</div>
