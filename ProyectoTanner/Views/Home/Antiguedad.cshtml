    <header>
        <div class="container">
            <div class="marco02 heading wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                @if (ViewBag.Mostrar != null)
                {
                    <div class="alert alert-warning">
                        <strong>@ViewBag.Mensaje</strong>
                    </div>
                }
                else
                {
                }
                <h3>Certificados</h3>
                <div class="espacio-25"></div>
                @using (Html.BeginForm("Sol_Certificado", "HOME", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-sm-4 col-xs-4">
                            Selecciona el tipo de Certificado
                        </div>
                        <div class="col-sm-3 col-xs-5">
                            <div class="form-group">
                                @Html.DropDownList("ListCert", new SelectList(ViewBag.ListCert, "COD", "TEXT"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4 col-xs-4">
                            Para ser presentado
                        </div>
                        <div class="col-sm-3 col-xs-5">
                            <div class="form-group">
                                @Html.DropDownList("ListMotivos", new SelectList(ViewBag.ListMotivos, "COD", "TEXT"), new { @class = "form-control", @onchange = "callChangefunc(this.value)" })
                            </div>
                        </div>

                        <div class="col-sm-3 col-xs-5">
                            <div class="form-group">
                                @Html.TextBoxFor(a => a.otroMotivo, new { @id = "otroMotivo", @class = "form-control", @placeholder = "Otro Motivo", @disabled = "diabled" })
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-sm-4 col-xs-4">
                            Nro de Ctas
                        </div>
                        <div class="col-sm-3 col-xs-5">
                            <div class="form-group">
                                @Html.DropDownList("LtaCtas", new SelectList(ViewBag.LtaCtas, "COD", "TEXT"), new { @class = "form-control", @id = "LtaCtas", disabled = "disabled" })
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-sm-4 col-xs-4">
                            Total Credito
                        </div>
                        <div class="col-sm-3 col-xs-5">
                            @Html.TextBoxFor(a => a.valorCred, new { @id = "valorCred", @class = "form-control", @placeholder = "Total Credito", required = "requered", disabled = "disabled" })
                        </div>
                    </div>
                    <div class="espacio-25"></div>
                    <div class="row">
                        <div class="col-sm-4 col-xs-4">
                            Valor Cuota
                        </div>
                        <div class="col-sm-3 col-xs-5">
                            @Html.TextBoxFor(a => a.valorCta, new { @id = "valorCta", @class = "form-control", @placeholder = "Valor Cuota", required = "requered", disabled = "disabled" })

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-3 col-xs-5">
                            <button type="submit" class="btn-primary btn-form btn-fullwidth">Enviar</button>
                        </div>
                    </div>
                }
            </div>
        </div>



