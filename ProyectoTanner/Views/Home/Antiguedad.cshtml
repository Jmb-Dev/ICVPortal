    <script>
        function callChangefunc(val) {
            console.log(val);

            if (val == '1') {
                document.getElementById('valorCred').value = '';
                document.getElementById('valorCred').disabled = false;
                document.getElementById('LtaCtas').disabled = false;
                document.getElementById('valorCta').disabled = false;

            } else if (val == '4') {
                document.getElementById('otroMotivo').disabled = false;
            }
            else {
                document.getElementById('valorCred').disabled = true;
                document.getElementById('LtaCtas').disabled = true;
                document.getElementById('valorCta').disabled = true;
                document.getElementById('valorCred').value = '';
                 document.getElementById('otroMotivo').disabled = true;
                    document.getElementById('otroMotivo').value = '';
            }

           
                   
            
        };
       
    </script>

