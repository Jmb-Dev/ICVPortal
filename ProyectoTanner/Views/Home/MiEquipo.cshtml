    <script>

        $(document).on('click', '.btn-ver', function (e) {
            console.log("ver");
            var TeamDetailPostBackURL = 'VerSolicitudJefatura';
            //debugger;

            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var tipo = $buttonClicked.attr('data-tipo');
            var nombre = $buttonClicked.attr('data-nombre');


            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: { "idSolicitud": id, "idTipo": tipo, "Nombre": nombre},
                datatype: "json",
                success: function (data) {
                    //debugger;
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });

        $(document).on('click', '.btn-rech', function (e) {
